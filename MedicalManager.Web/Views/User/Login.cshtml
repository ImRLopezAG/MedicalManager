@model MedicalManager.Core.Application.ViewModels.LoginVm;

@{
  ViewData["Title"] = "Login";
}

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Login</h2>
    <hr />
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <form asp-controller="User" asp-action="Login" method="post">
      <div class="form-group">
        <label asp-for="UserName">UserName</label>
        <input asp-for="UserName" class="form-control" />
      </div>
      <div class="form-group mb-3">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" />
      </div>
      <div class="form-group">
        <input type="submit" value="Login" class="btn btn-outline-success float-end" />
        <a asp-controller="User" asp-action="Create" class="btn btn-primary float-start">Register as a new user</a>
      </div>
    </form>
  </div>