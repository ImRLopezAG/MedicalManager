@model IEnumerable<MedicalManager.Core.Application.ViewModels.DoctorVm>

@{
  ViewData["Title"] = "Doctors";
}

<Section class="row">
  <div>
    <h1 class="float-start">Doctors</h1>
    <a class='btn btn-primary float-end' asp-action="Create">Create New</a>
  </div>
  <hr/>
  @foreach (var item in Model) {
    <div class="card me-3 px-0" style="width: 18rem;">
      <img src="@item.Photo" class="card-img-top" alt="@item.FirstName">
      <div class="card-body">
        <h5 class="card-title">@item.FirstName @item.LastName</h5>
      </div>
      <ul class="list-group list-group-flush px-2">
        <li class="list-group-item"><strong>Identification:</strong> @item.Identification</li>
        <li class="list-group-item"><strong>Phone:</strong> @item.Phone</li>
        <li class="list-group-item"><strong>Email:</strong> @item.Email</li>
      </ul>
      <div class="card-body">
        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info float-start">Edit</a>
        @using (Html.BeginForm("Delete", "Doctor", FormMethod.Post, new { @class = "float-end" })) {
          <input type="hidden" name="id" asp-for="@item.Id" value="@item.Id" />
          <input type="submit" class="btn btn-danger" value="Delete" onclick="return confirm('are you sure that you want delete this Doctor: @item.FirstName @item.LastName')">
        }
      </div>
    </div>
  }
</Section>
